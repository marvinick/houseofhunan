<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-login'}) do |f| %>
	<h2 class="text-center">Log in</h2>
  <div class="form-inputs">
    <%= f.input :email, required: false, label:false, placeholder: "email", autofocus: true %>
    <%= f.input :password, required: false, label:false, placeholder: "email" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-primary btn-block" %>
  </div>
  <h5><%= link_to "Back", root_path %></h5>
<% end %>

